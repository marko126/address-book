{% extends 'base.html.twig' %}

{% block title %}Edit contact{% endblock %}

{% block page_title %}
    <h2 class="page-title">
        <span>Edit contact</span>
    </h2>
{% endblock %}

{% block body %}
    <div id="content">
        <div class="container portfolio">
            <div class="row">
                <div class="col-md-12">
                    {% if person.picture %}
                         <img id="logo-img" src="{{ asset('upload/images/' ~ person.picture) }}" />
                    {% endif %}
                </div>
                <div class="col-md-6">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<link href="{{ asset('plugins/bootstrap-select/css/bootstrap-select.min.css') }}" rel="stylesheet">
<link href="{{ asset('css/algolia-autocomplete.css') }}" rel="stylesheet">
<style>
    #logo-img {
        max-width: 150px;
        margin: 10px 0 20px ;
    }
</style>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('plugins/bootstrap-select/js/bootstrap-select.min.js') }}"></script>
<script src="https://cdn.jsdelivr.net/autocomplete.js/0/autocomplete.jquery.min.js"></script>
<script src="{{ asset('js/algolia-autocomplete.js') }}"></script>
{% endblock %}
