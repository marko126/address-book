{% extends 'base.html.twig' %}

{% block body %}
    <div id="highlighted">
        <div class="container">
            <div class="header">
                <h2 class="page-title">
                    <span>People list</span>
                </h2>
            </div>
        </div>
    </div>
    <div id="content">
        <div class="container portfolio">
            <!--Portfolio feature item-->
            <div class="row">
                <div class="col-md-12">
                    <h2>
                        List of people in address book
                        <a href="{{ path('person_create') }}" class="pull-right btn btn-success">
                            <i class="fa fa-plus-circle"></i>
                            New Person
                        </a>
                    </h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">		
                    <table class="table table-striped table-hover" id="person-list">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Street and nr.</th>
                                <th>Zip</th>
                                <th>City</th>
                                <th>Country</th>
                                <th>Phone</th>
                                <th>Birthday</th>
                                <th>Email</th>
                                <th class="actions text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
                        
    <!-- Delete Modal -->
    <div class="modal fade" id="delete-record-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <input type="hidden" name="id" value="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Person</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete person?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" data-action="delete">Delete</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.1.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/select/1.1.2/js/dataTables.select.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.0.2/js/dataTables.responsive.min.js"></script>
<script type="text/javascript">

    var app = {};

    app.table = $('#person-list').DataTable({
        processing: true,
        //"serverSide": true,
        ajax: {
            url: "{{ path('person_list', {'_format': 'json'}) }}",
            type: "POST",
            dataSrc: ""
        },
        columns: [
            {data: "id"},
            {data: "firstName"},
            {data: "lastName"},
            {data: "street"},
            {data: "zip"},
            {data: "city"},
            {data: "countryName"},
            {data: "phoneNumber"},
            {data: "birthday"},
            {data: "email"},
            {
                render: function (data, type, full, meta) {
                    return "<td class='text-center'><div class='btn-group'><a class='btn btn-default' href='{{ path("person_edit", {"id": 1}) }}'><i class='fa fa-pencil'></i></a><button class='btn btn-default' data-id='" + full.id + "' data-action='delete'><i class='fa fa-trash'></i></button></div></td>";
                }
            }
        ]
    });

    app.bindEvents = function () {

        var deletePopup = $('#delete-record-modal');
        $('#person-list').on('click', 'button[data-action="delete"]', function (e) {
            e.preventDefault();
            var id = $(this).attr('data-id');
            
            deletePopup.find('[name="id"]').val(id);
            deletePopup.modal('show');
        });

        $('#delete-record-modal button[data-action="delete"]').click(function (e) {
            var successFunction = function (data) {
                if (data.status == 200) {
                    alert(data['message']);
                    deletePopup.modal("hide");
                    app.table.ajax.reload();
                } else if (data.status != 200) {
                    alert(data['message']);
                }
            };
            $.ajax({
                type: "POST",
                cache: false,
                url: "{{ path('person_delete') }}",
                dataType: "json",
                data: {id: deletePopup.find('input[name="id"]').val()}
            }).done(successFunction).fail(function (xhr, result, status) {
                alert('GetPermissions ' + xhr.statusText + ' ' + xhr.responseText + ' ' + xhr.status);
            });
        });
    };

    app.init = function () {
        app.bindEvents();
    };

    $(app.init);

</script>    
{% endblock %}
